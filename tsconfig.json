{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "tslib": ["./node_modules/tslib/tslib.d.ts"],
      "@styles/*": ["./src/styles/*"],
      "@env": ["./src/envs/env.ts"],
      "@utils": ["./src/utils/index.ts"],
      "@dtos": ["./src/types/dtos/index.ts"],
      "@interfaces": ["./src/types/interfaces/index.ts"],
      "@enums": ["./src/types/enums/index.ts"],
      "@models": ["./src/types/models/index.ts"],
      "@interceptors": ["./src/app/common/interceptors/index.ts"],
      "@animations": ["./src/app/common/animations/index.ts"],
      "@services": ["./src/app/common/services/index.ts"],
      "@guards": ["./src/app/common/guards/index.ts"],
      "@components/*": ["./src/app/common/components/*"],

      "@app/*": ["./src/app/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
